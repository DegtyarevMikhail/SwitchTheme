<resources>

    <!-- Base/Day mode application theme. -->
    <style name="ThemeDay" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#303030</item>
        <item name="android:backgroundTint">#340D7A</item>
        <item name="cardbackground">#ffffff</item>
        <item name="textcolor">#808080</item>
        <item name="tintcolor">#000000</item>
        <item name="buttoncolor">#340D7A</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>


        <item name="android:layout_width">@dimen/calc_button_width</item>
        <item name="android:layout_height">@dimen/calc_button_height</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="rippleColor">#D54011</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/display_text</item>

    </style>

    <!-- Night Theme. -->
    <style name="ThemeNight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/display_text</item>

        <item name="cardbackground">#424242</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="android:backgroundTint">#000000</item>
        <item name="android:layout_width">@dimen/calc_button_width</item>
        <item name="android:layout_height">@dimen/calc_button_height</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="rippleColor">#D54011</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/display_text</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation" >@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

